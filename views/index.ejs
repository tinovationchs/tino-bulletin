<!DOCTYPE html>
<html>
    <head>
      <%- include ("./component/header.ejs") %>
        <link href="/style.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <%- include('./component/titlebar.ejs', {user : user}) %>

        <div style="padding: 0px 15px;">
            <% if (user.admin && !admin_view) { %>
                <a href="/admin"> Admin </a><br>
                <a href="/approvePosts"> Approve Posts </a>
            <% } %>
            <h2> Posts: </h2>
            <% posts.forEach((post) => { %>
                <%- include('./component/postView.ejs', {post: post, admin_view: admin_view}) %>
            <% }); %>
        
            <a href="/createPost" class="btn btn-light" id="post-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg> Create Post</a>
        </div>
        <script>
            async function approvePost(post) {
                await fetch('/api/posts/approve', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(post)
                });
            }
        </script>
    </body>
</html>